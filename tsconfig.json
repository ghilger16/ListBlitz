{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "es2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@Assets": ["assets"],
      "@Components": ["components"],
      "@Context": ["context"],
      "@Data": ["data"],
      "@Hooks": ["hooks"],
      "@Types": ["types"],
      "@Utils": ["utils"]
    }
  },
  "include": [
    "app/**/*",
    "assets/**/*",
    "components/**/*",
    "data/**/*",
    "context/**/*",
    "types/**/*",
    "hooks/**/*",
    "utils/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
